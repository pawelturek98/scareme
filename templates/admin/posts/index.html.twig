{% extends 'admin/base.html.twig' %}

{% block title %}Posts index{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="card-body">
                    <h1>Posts list</h1>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Image</th>
                                <th>Title</th>
                                <th>Url</th>
                                <th>Created at</th>
                                <th>Published</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for post in posts %}
                            <tr>
                                <td>{{ post.id }}</td>
                                <td><img src="{{ asset('uploads/posts/images/' ~ post.image) }}" alt="" height="64" width="64"></td>
                                <td>{{ post.title }}</td>
                                <td>{{ post.urlKey }}</td>
                                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                <td>{{ post.published ? 'Yes' : 'No' }}</td>
                                <td>
                                    <div style="display: flex;">
                                        <a href="{{ path('posts_edit', {'id': post.id}) }}" class="btn btn-primary" style="margin-right: 10px">Edit</a>
                                        {{ include('admin/posts/_delete_form.html.twig', {post: post}) }}
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="13">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="text-right">
                        <a href="{{ path('posts_new') }}" class="btn btn-primary">Create new</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
