{% extends '/admin/base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-xl-5 col-md-5 col-sm-1">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">
                                Quick access buttons
                            </h4>
                            <ul class="quick-access">
                                <li class="quick-access__item"><a href="{{ path("posts_new") }}">Add post</a></li>
                                <li class="quick-access__item"><a href="#">Add user</a></li>
                                <li class="quick-access__item"><a href="{{ path("static_page_new") }}">Add page</a></li>
                                <li class="quick-access__item"><a href="{{ path("admin_settings_index") }}">Site settings</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 mt-4">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="card-title">
                                Calendar
                            </h3>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-xl-7 col-md-7 col-sm-1">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">
                        Statistics
                    </h3>
                    <canvas id="myChart" height="180"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-xl-6 col-md-6 col-sm-12">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">
                        Top 5 posts
                    </h3>
                    Tu będą top 5 postów
                </div>
            </div>
        </div>
        <div class="col-xl-6 col-md-6 col-sm-12">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">New come users</h3>
                    New come users here
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-xl-5 col-md-5 col-sm-12">

        </div>
    </div>
</div>
{% endblock %}

{% block footer %}
    {{ parent() }}
    <script>
        var ctx = document.getElementById('myChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Red'],
                datasets: [{
                    label: '# of Votes',
                    data: [
                        [1,2,3,4,5],
                        [1,2,3,1,3]
                    ],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
{% endblock %}