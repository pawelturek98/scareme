{% extends 'admin/base.html.twig' %}

{% block title %}Edit StaticPage{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12 mb-3">
            <a href="{{ path('admin_static_page_index') }}" class="btn btn-dark">back to list</a>
            <button
                    class="btn btn-danger delete-item"
                    type="button"
                    data-delete_message="Are you sure you want to delete this page?"
                    data-delete_url="{{ path('static_page_delete', {'id': static_page.id}) }}">
                Delete
            </button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="card-body">
                    <h1>Edit static page</h1>
                    {{ include('admin/static_page/_form.html.twig', {'button_label': 'Update'}) }}
                    <a href="{{ path('admin_static_page_index') }}">back to list</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
