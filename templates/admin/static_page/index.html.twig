{% extends 'admin/base.html.twig' %}

{% block title %}StaticPage index{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="card-body">
                    <h1>Static pages</h1>
                    <table class="table table-bordered table-light text-center">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Published</th>
                            <th>Created at</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for static_page in static_pages %}
                            <tr>
                                <td>{{ static_page.id }}</td>
                                <td>{{ static_page.title }}</td>
                                <td>{{ static_page.published ? 'Yes' : 'No' }}</td>
                                <td>{{ static_page.createdAt ? static_page.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                <td>
                                    <a href="{{ path('static_page_edit', {'id': static_page.id}) }}" class="btn btn-success">Edit</a>
                                    <button
                                            class="btn btn-danger delete-item"
                                            type="button"
                                            data-delete_message="Are you sure you want to delete this page?"
                                            data-delete_url="{{ path('static_page_delete', {'id': static_page.id}) }}">
                                        Delete
                                    </button>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="12">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="text-right">
                        <a href="{{ path('static_page_new') }}" class="btn btn-primary">Create new</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
