{% extends 'admin/base.html.twig' %}

{% block title %}Users!{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="card-body">
                    <h1>Users list</h1>
                    <table class="table table-bordered table-light text-center">
                        <tr>
                            <th>ID</th>
                            <th>Username</th>
                            <th>E-mail</th>
                            <th>Action</th>
                        </tr>
                        {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.username }}</td>
                            <td>{{ user.email }}</td>
                            <td>
                                <a href="{{ path('users_show', {'id': user.id}) }}" class="btn btn-primary">Show</a>
                                <a href="{{ path('users_edit', {'id': user.id}) }}" class="btn btn-success">Edit</a>
                                <button
                                        class="btn btn-danger delete-item"
                                        type="button"
                                        data-delete_message="Are you sure you want to delete this user?"
                                        data-delete_url="{{ path('users_delete', {'id': user.id}) }}">
                                    Delete
                                </button>
                            </td>
                        </tr>
                        {% endfor %}
                    </table>
                    <div class="text-right">
                        <a href="{{ path('users_new') }}" class="btn btn-primary">Add new user +</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block footer %}
    <script>

    </script>
{% endblock %}
