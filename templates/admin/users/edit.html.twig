{% extends 'admin/base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-3 col-sm-3 col-xs-3 mb-3">
            <a href="{{ path('admin_users_index') }}" class="btn btn-dark">back to list</a>
            <a href="{{ path('users_show', {'id': user.id}) }}" class="btn btn-primary">Show user</a>
            <button
                    class="btn btn-danger delete-item"
                    type="button"
                    data-delete_message="Are you sure you want to delete this user?"
                    data-delete_url="{{ path('users_delete', {'id': user.id}) }}">
                Delete
            </button>
        </div>
        <div class="col-md-9 text-right"><a href="{{ path('users_new') }}" class="btn btn-success">Create new user </a></div>
    </div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            {{ include('admin/users/_form.html.twig', {"action": "Edit user: " ~ user.email }) }}
        </div>
    </div>
{% endblock %}