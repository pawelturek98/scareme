{% extends 'base.html.twig' %}

{% block title %}{% trans %}Articles{% endtrans %}{% endblock %}

{% block body %}
<div class="container mt-5 mb-5">
    <div class="row">
        {% for post in posts %}
        <div class="col-md-3 col-xl-3 col-xs-6 mb-4">
            <a href="{{ path('article_item', {slug: post.urlKey}) }}">
                <div class="card">
                    <img class="card-img-top" src="{{ asset('uploads/posts/images/' ~ post.image) }}" alt="{{ post.title }}" width="300" height="200">
                    <div class="card-body">
                        <h5 class="card-title">{{ post.title }}</h5>
                        <p class="card-text">{{ post.shortDescription }}</p>
                    </div>
                </div>
            </a>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
