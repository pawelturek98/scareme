{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-titile">{{ 'site.register' | trans }}</h1>
                    {{ form_start(registrationForm) }}
                        <div class="form-group">
                            {{ form_row(registrationForm.username, {
                                label: 'user.username'
                            }) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(registrationForm.email) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(registrationForm.plainPassword, {
                                label: 'user.password'
                            }) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(registrationForm.agreeTerms) }}
                            {{ form_label(registrationForm.agreeTerms) }}
                        </div>
                        <div class="form-group text-right mt-4" style="width: 100%; text-align: right;">
                            <button type="submit" class="btn btn-primary">{{ 'form.button.register' | trans }}</button>
                        </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row" style="height: 110px"></div>
</div>
{% endblock %}
