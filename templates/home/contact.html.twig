{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <div class="container mb-5 mt-5">
        <div class="row">
            <div class="col-xl-9 col-md-12">
                <div class="card">

                    <div class="card-body">
                        <h3 class="card-title">
                            {% trans %}Contact with developer{% endtrans %}
                        </h3>
                        <hr>
                        {{ form_start(form) }}
                            {{ form_widget(form) }}
                            <button class="btn btn-primary" >{% trans %}Save{% endtrans %}</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-4">
                {{ render_esi(controller(
                    'App\\Controller\\ArticlesController::articlesWidget'
                )) }}
            </div>
        </div>
    </div>
{% endblock %}
